@using ReactAdvantage.IdentityServer.Models.Account
@model ResetPasswordInputModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="login-page">
    
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <div class="logo">
                <img src="~/logo.png" />
            </div>

            @await Html.PartialAsync("_ValidationSummary")

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reset Password</h3>
                </div>
                <div class="panel-body">

                    <form asp-action="ResetPassword">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Code" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input type="password" class="form-control" placeholder="New Password" asp-for="NewPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button">Set new password</button>
                                <a class="btn btn-default" asp-action="Login">Cancel</a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>